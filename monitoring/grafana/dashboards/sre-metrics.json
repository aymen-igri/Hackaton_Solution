  "id": null,
  "links": [],
  "panels": [
    {
      "title": "MTTA (Mean Time To Acknowledge)",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "avg(alert_processing_duration_seconds_sum / alert_processing_duration_seconds_count)",
          "legendFormat": "MTTA"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 300 },
              { "color": "red", "value": 900 }
            ]
          }
        }
      }
    },
    {
      "title": "MTTR (Mean Time To Resolve)",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "avg(http_request_duration_seconds_sum / http_request_duration_seconds_count)",
          "legendFormat": "MTTR"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1800 },
              { "color": "red", "value": 3600 }
            ]
          }
        }
      }
    },
    {
      "title": "Service Health",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "title": "Request Rate by Service",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count[5m])) by (job)",
          "legendFormat": "{{job}}"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["sre", "incident-platform"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
